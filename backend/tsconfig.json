{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"]
    },
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react",
    "allowJs": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "test/**/*.js", "src/sequelize/migrations/**/*.js", "src/sequelize/models/**/*.js", "src/sequelize/config/**/*.js", "src/sequelize/seeders/**/*.js", "src/config/database.js"],
  "exclude": ["node_modules", "dist"]
}
